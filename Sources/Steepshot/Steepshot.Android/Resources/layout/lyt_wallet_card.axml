<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/token_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />
    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp">
        <TextView
            android:id="@+id/balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textColor="@color/white50" />
        <TextView
            android:id="@+id/balance"
            android:layout_below="@id/balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:textSize="34sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/token_balance_title"
            android:layout_below="@id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textColor="@color/white50" />
        <TextView
            android:id="@+id/token_balance"
            android:layout_below="@id/token_balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/token_balance_title2"
            android:layout_below="@id/balance"
            android:layout_toRightOf="@id/token_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="40dp"
            android:textSize="14sp"
            android:textColor="@color/white50" />
        <TextView
            android:id="@+id/token_balance2"
            android:layout_below="@id/token_balance_title2"
            android:layout_toRightOf="@id/token_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>