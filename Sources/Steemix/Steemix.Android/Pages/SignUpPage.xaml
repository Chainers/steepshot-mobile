<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Steemix.Android.Pages.SignUpPage">

  
  <ContentPage.Content>
    <StackLayout VerticalOptions="StartAndExpand" BackgroundColor="White">
      
      <Label Text="Username" />
      <Entry x:Name="usernameEntry" Placeholder="username" />
      <Label Text="Posting key" />
      <Entry x:Name="postingKeyEntry" />
      <Label Text="Password" />
      <Entry x:Name="passwordEntry" IsPassword="true" />
      <Button Text="Register" Clicked="OnRegisterButtonClicked" />
      <Label x:Name="messageLabel" />
      <Button Text="Cancel" Clicked="OnCancelButtonClicked" />
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>